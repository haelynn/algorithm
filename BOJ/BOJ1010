#define _CRT_SECURE_NO_WARNINGS
#include <iostream>

using namespace std;

int main() {

	int t, n, m;
	int dp[31][31];

	scanf("%d", &t);
	for (int i = 0; i < 31; i++) dp[1][i] = i;

	for (int i = 2; i < 31; i++) {
		dp[i][i] = 1;

		for (int j = i + 1; j < 31; j++) {
			dp[i][j] = dp[i][j - 1] + dp[i - 1][j - 1];
		}
	}

	while (t--) {
		scanf("%d %d", &n, &m);
		printf("%d\n", dp[n][m]);
	}

}
